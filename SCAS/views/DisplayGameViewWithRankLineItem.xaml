<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid VerticalAlignment="Center">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120"/>
      <ColumnDefinition Width="180"/>
      <ColumnDefinition Width="160"/>
      <ColumnDefinition Width="120"/>
      <ColumnDefinition Width="120"/>
      <ColumnDefinition Width="120"/>
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Text="{Binding Line}" Foreground="White" FontFamily="微软雅黑" FontSize="24"/>
    <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Text="{Binding Name}" Foreground="#d93c3f" FontFamily="微软雅黑" FontSize="24"/>
    <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" Text="{Binding Team}" Foreground="#d93c3f" FontFamily="微软雅黑" FontSize="24"/>
    <TextBlock Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" Text="{Binding Rank}" Foreground="#d93c3f" FontFamily="微软雅黑" FontSize="24"/>
    <TextBlock Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" Text="{Binding Grade}" Foreground="#d93c3f" FontFamily="微软雅黑" FontSize="24"/>
    <TextBlock Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" Text="{Binding OrderInGroup}" Foreground="#f6c12d" FontFamily="微软雅黑" FontSize="24"/>
  </Grid>

</UserControl>
