<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SCAS.views">
  <Grid Margin="0 16 0 0">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TreeView Grid.Row="0" Grid.Column="0" Name="CompTree" Items="{Binding}">
      <TreeView.ItemTemplate>
        <TreeDataTemplate ItemsSource="{Binding Children}">
          <TextBlock Text="{Binding Header}" FontFamily="微软雅黑" FontSize="16"/>
        </TreeDataTemplate>
      </TreeView.ItemTemplate>
    </TreeView>

    <StackPanel Grid.Row="0" Grid.Column="1">
      <local:ControlGameView Name="GameView"/>
      <local:ControlEventView Name="EventView"/>
    </StackPanel>
  </Grid>
</UserControl>
