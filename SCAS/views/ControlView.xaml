<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SCAS.views">
  <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 16 0 0">
    <TreeView Name="CompTree" Items="{Binding}">
      <TreeView.ItemTemplate>
        <TreeDataTemplate ItemsSource="{Binding Children}">
          <TextBlock Text="{Binding Header}" FontFamily="微软雅黑" FontSize="16"/>
        </TreeDataTemplate>
      </TreeView.ItemTemplate>
    </TreeView>
    <local:ControlGameView Name="GameView" />
    <local:ControlEventView Name="EventView" />
  </StackPanel>
</UserControl>
